<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.archery"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.VIBRATE" />
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="10" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar">
        <activity
            android:name=".start.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
                <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.example.archery.Start" />
        </activity>
        <activity
            android:name=".statistics.StatisticsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.archery.Start" />
        </activity>
        <activity android:name=".sight.CSightPropertiesActivity"
                android:theme="@android:style/Theme.Dialog"
                android:label="@string/title_activity_sight"
                />
        <activity android:name=".NotesActivity"
                  />
        <activity android:name=".statistics.CRecordView"
                  android:theme="@android:style/Theme.Dialog"
                />
    </application>

</manifest>